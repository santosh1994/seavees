{% layout settings.customer_layout %}

<div id="template" class="container" role="main">

	<div id="corner-shoe" class="js-corner-shoe hidden-phone">

        {% for product in collections.corner-shoe.products %}

        <img class="main_image" src="https://s3.amazonaws.com/seavees-production/highlight_shoes/1/default/Bocce_sale_Shoe_Corner.jpg?1405542684" alt="{{ product.featured_image.alt | escape }}" />
        <a href="{{ product.url | within: collection }}"></a>

        {% endfor %}

    </div>

    <header role="main">
        <h1>change my password</h1>
    </header>


  	<div id="customer" class="page_container">
  		<div id="login-panel">


		  	<!-- Create Customer -->
		  	<div id="create-customer">

			    <div class="row-fluid">
                    <div class="span12">
                        <h2>Change my password</h2>
                    </div>
                </div>

                <div class="row-fluid">
					<div class="span4 offset4">

						<p> Please update your password. We’ll automatically log you in after you’re done. </p>

					    {% form 'reset_customer_password' %}
						{{ form.errors | default_errors }}

						<div id="password" class="clearfix control-group">
							<label class="login" for="password">Password</label>
							<input type="password" value="" name="customer[password]" id="customer_password" class="title input-xlarge password" size="16" />
						</div>
						<div id="password_confirm" class="clearfix control-group">
							<label class="login" for="password_confirmation">Password Confirmation</label>
							<input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="title input-xlarge password" size="16" />
						</div>
						<div class="action_bottom">
							<input class="btn btn-primary" type="submit" value="Reset Password" />
						</div>
						{% endform %}

						<div class="actions">
							<a href="/">Cancel and return to home page</a>
						</div>
					</div>
				</div>

		 	</div><!-- /#create-customer -->

		</div>
  	</div>
</div>



