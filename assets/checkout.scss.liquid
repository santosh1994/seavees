.section__header h3, #contact-information h5, .order-summary__section--header h3, .field label {
    font-family: "news-gothic-std", sans-serif;
}

.field.shipping-option label {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

/* Body text and headers */
.header { border-bottom: none; padding: 0; }
.header .wrap { position: relative; }
.header .icon--lock { top: 10px; right: 10px; display: block; }
.header__backdrop { background: #000; width: 100%; height: 36px; top: 0; left: 0; position: absolute; z-index: 1; }
#checkout, .order-summary{font-family: "Helvetica Neue", Helvetica, Arial, sans-serif; color: #999;}
#checkout .section__summary p { color: #999; }
.order-summary-recap {background-color: #fff; border-bottom: 1px solid #e1e1e1 !important;}
.boxshadow .order-summary-recap {border: medium none;box-shadow: 0 0 0 1px rgba(0, 0, 0, 0);}
h1, h2, h3, h4, h5, h6 {font-family: "Helvetica Neue", Helvetica, Arial, sans-serif; font-weight: bold; font-size: 24px; line-height: 32px; margin-bottom: 20px; text-transform: uppercase; color: #000; letter-spacing: 0; }
h3 {margin-bottom: 0;}
h5 {margin-top: 40px;}
.alternative-payment-methods {display: none;}
p, small {
    color: #000;
}
label, label small {
    font-weight: bold;
    text-transform: uppercase;
    color: #000;
}
.call-to-action--final label {
    font-size: 12px;
    color: #999;
}
.order-summary strong, .product__info__name strong, strong {
    color: #000;
}
.fieldset, .chrome input[type="checkbox"], .safari input[type="checkbox"], .opera input[type="checkbox"] {
    border-color: #999;
}


/* Header, Footer and Logo */
.shop {
    width: 195px;
    height: 36px;
    margin: 0 auto;
    padding: 76px 0 50px;
    float: none;
}

.shop a {display: block !important; height: 85px; }
h1.shop__name{ text-indent: -10000px;z-index: 1;}
.footer { background: none !important; padding: 20px 0; font-family: "Helvetica Neue", Helvetica, Arial, sans-serif; font-size: 12px;text-align: center; border-top: 1px solid #e6e6e6 !important; display:none !important;}
.footer .wrap {padding: 0 !important; max-width: 88em;}
.footer__copyright  {float: none; color: #999; }
.boxshadow .footer {box-shadow: none;}
#po-box-note {font-family: "Helvetica Neue", Helvetica, Arial, sans-serif; font-size: 14px; line-height: 20px; margin-bottom: 20px; text-align: center; display:block;}

/* Links */
a {color: #000 !important;}
a:hover { color: #999 !important;}
.more:after {font-size: 10px;}
.section__edit-link {font-size: 14px !important;position:absolute; right: 0px; top: 50px;}

/* Form fields */
.fieldset {border-radius: 0;}
.boxshadow .field--focus {border-radius: 0px !important; box-shadow: 0 0 0 2px #000 !important;}
.field-group--has-subfields {background-color: #fff;}
.chrome input[type="radio"]:checked, .safari input[type="radio"]:checked {background-color: #000 !important;border-color: #000 !important;-webkit-box-shadow: 0 0 0 10px #000 inset !important;box-shadow: 0 0 0 10px #000 inset !important;}
.chrome select, .safari select {background-image: url(https://cdn.shopify.com/s/assets/checkout/icons/ico-updown-4c5ac8f8d447206ab65a5d392d3dcd97.svg) !important;}
input, select {
    color: #000;
}
input::-webkit-input-placeholder, textarea::-webkit-input-placeholder {
    color: #ccc;
}

input:-moz-placeholder, textarea:-moz-placeholder {
    color: #ccc;
}

input::-moz-placeholder, textarea::-moz-placeholder {
    color: #ccc;
}

input:-ms-input-placeholder, textarea:-ms-input-placeholder {
    color: #ccc;
}

.success .applied-discount__code {
    color: #fdd344;
}

.success .applied-discount__status {
    display: none;
}

.applied-discount .btn.btn--delete {
    background-color: #bbb !important;
    width: 18px;
    height: 18px;
    min-width: 0;
    margin-top: 0;
}

.applied-discount .btn.btn--delete:hover {
    background-color: #000 !important;
}

/* Form buttons */
input.btn, input.btn.btn--primary, a.btn {
	background-color: #fdd344 !important;
	padding: 15px 35px;
  	border: none;
  	-moz-border-radius: 0;
  	border-radius: 0;
  	min-width: 180px;
  	font-size: 18px;
  	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  	font-style: normal;
  	font-weight: bold;
  	text-decoration: none;
  	text-transform: uppercase;
  	text-align: center;
  	color: #fff !important;
  	text-shadow: none;
  	-webkit-transition: all 0.2s ease-in-out;
  	-moz-transition: all 0.2s ease-in-out;
  	-ms-transition: all 0.2s ease-in-out;
  	-o-transition: all 0.2s ease-in-out;
    outline:0;
}
input.btn:hover, input.btn.btn--primary:hover, a.btn:hover { background-color: #000 !important;}
input.btn.btn--inset {min-width: 0}

/* Prices and summary */
#contact-information {margin-top: -67px;}
.order-summary {border-radius: 0; background-color: #fff; border: 1px solid #999; text-transform: uppercase; }
.order-summary div{border-color: #e1e1e1 !important;}
.order-summary .product-list .product {border-top: none;}
.order-summary  .product__price { padding-top: .6em; }
.order-summary .product-list .product {}
.product__info { text-transform: uppercase; }
.order-summary .product__info { padding-top: .6em;}
product__info__name { color: #000; font-weight: bold; }
.order-summary .product__info__name {padding: 0 0 0 5px; margin-bottom: 3px; color: #000; font-weight: bold; }
.product__info__description { color: #999; padding: 0 0 0 5px;}
#show-discount-form-link {font-family: "Helvetica Neue", Helvetica, Arial, sans-serif; text-transform: none; color: #000 !important;}
#show-discount-form-link:hover {color: #999 !important;}
.payment-due__currency {background-color: #bbb}
 #shipping-address, #shipping-address div, #payment div, .section {border-color: #e !important;}
 .section { border-top: 1px solid #e1e1e1; }
.payment-due__price {color: #fdd344; font-size: 24px !important; font-family: "Helvetica Neue", Helvetica, Arial, sans-serif; font-weight: bold !important; }
.payment-method-total {color: #000;}
.icon--print {display:none;}
.icon--order-success {margin-bottom: 40px;}


/* SVGs */
svg g {stroke: #999;}
svg circle {stroke: #999;}


/* Create Account Prompt */

#create-account-prompt h3 {padding-bottom: 20px;}
#create-account-prompt p {color: #000; font-family: "Montserrat",sans-serif; font-size: 14px; line-height: 20px; font-weight: 400;}
#create-account-prompt p a, #create-account-prompt p a:visited {border-bottom: 1px solid #999; color: #000 !important;}
#create-account-prompt p a:hover {border-bottom: none; color: #999;}

/* Footer Nav */
.footer__copyright {display: inline-block;float: left;width: 40%;text-align: left;}
.footer__nav {text-align:right;float:right; display: inline-block;width: 40%}
.footer__nav  li {display: inline-block;float: none;}
.footer__nav  li a{font-size: 11px;color: #999 !important;}
.footer__nav  li a:hover { color: #000 !important; }

/* Media Queries */

@media only screen and (max-width: 479px) {}

@media only screen and (min-width: 480px) and (max-width: 767px) {}

@media all and (max-width: 1000px){
   #contact-information {margin-top: 0;}
  .order-summary .product__info {padding-top: 0;}
  .order-summary .product__info__name, .product__info__description {padding-left: 0 !important;}
  .order-summary-recap .product-list {border-top: 1px solid #e1e1e1;}
  .section__edit-link {position:relative; right: auto; top: auto;}
  .footer__copyright, .footer__nav {display:block;text-align: center;padding-bottom: 15px;width: 100%;}
}

@media all and (max-width: 600px){
	.footer {text-align: center;}
  .boxshadow .footer {border-top:none; box-shadow:none;}
  .payment-due__price {font-size: 22px !important;}
}

/* end */

::selection {
  background: #000; /* WebKit/Blink Browsers */
}
::-moz-selection {
  background: #000; /* Gecko Browsers */
}

#continue-shopping {
	display: none;
}
a.back {
	font-size: 180%;
  	font-weight: bold;
}

.applied-discount__code, .applied-reduction-code__information {
	display: none;
}
